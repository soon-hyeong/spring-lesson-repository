<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.kosa.myproject.mapper.CustomerMapper">
	<select id="getTotalCount" resultType="int">
		select count(1) from
		customer
	</select>
	<insert id="register" useGeneratedKeys="true" keyProperty="customerId">
		INSERT INTO customer (name, email) VALUES (#{name}, #{email})
	</insert>
	<select id="findById" resultType="org.kosa.myproject.domain.Customer">
		select customer_id, name, email 
		from customer 
		where customer_id=#{customerId}; 
	</select>
</mapper>